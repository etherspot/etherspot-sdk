{
  "name": "etherspot",
  "version": "1.0.0-alpha.31",
  "description": "ETHERspot sdk",
  "license": "MIT",
  "author": {
    "name": "NEWOBJECT.dev",
    "email": "hello@newobject.dev"
  },
  "homepage": "https://docs.etherspot.dev",
  "bugs": {
    "email": "support@newobject.dev"
  },
  "main": "./dist/node.js",
  "browser": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "exit 1",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit-watch": "jest --watch",
    "test:unit-cov": "jest --coverage",
    "test:bdd": "cucumber-js test/**/*.feature --require test/setup.js --require 'test/**/*.ts'",
    "test:bdd-pretty": "npm run test:bdd -- --format progress-bar --format node_modules/cucumber-pretty",
    "test:bdd-only": "npm run test:bdd -- --tags @only",
    "prebuild": "rimraf ./dist",
    "build": "npm run compile",
    "compile": "tsc -p ./tsconfig.build.json",
    "compile-watch": "npm run compile -- --watch",
    "predocs:generate": "rimraf ./docs",
    "postdocs:generate": "cp -r ./.github-pages/files/ ./docs",
    "docs:generate": "typedoc ./src",
    "docs:serve": "serve ./docs"
  },
  "dependencies": {
    "@apollo/client": "3.1.3",
    "@etherspot/contracts": "1.0.0-alpha.26",
    "ethers-typed-data": "0.0.4",
    "class-transformer": "0.2.3",
    "cross-fetch": "3.0.4",
    "graphql": "15.3.0",
    "subscriptions-transport-ws": "0.9.17"
  },
  "devDependencies": {
    "@types/cucumber": "6.0.1",
    "@types/graphql": "14.5.0",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.9",
    "@types/ws": "7.2.4",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "cucumber": "6.0.5",
    "cucumber-pretty": "6.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "ethers": "5.0.8",
    "expect": "25.5.0",
    "jest": "25.5.4",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.2",
    "serve": "11.3.2",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.2",
    "typedoc": "0.17.4",
    "typescript": "3.9.3",
    "ws": "7.3.0"
  },
  "peerDependencies": {
    "ethers": "^5.0.8",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "json",
      "js",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "./node_modules/reflect-metadata/Reflect.js"
    ]
  }
}
